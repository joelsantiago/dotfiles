[user]
	name = Joel Santiago
	email = mail@joelsantiago.co
[core]
	editor = vim
	excludesfile = /Users/joelsantiago/.gitignore_global
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[difftool]
    prompt = false[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
    tool = Kaleidoscope
[alias]
    # add
    a = add --all

    # branch
    b = branch -v

    # commit
    c = commit
    ca = commit -am
    cm = commit -m
    amend = commit --amend

    # checkout
    co = checkout
    nb = checkout -b

    # cherry-pick
    cp = cherry-pick -x

    # diff
    d = diff
    dc = diff --cached
    last = diff HEAD^

    # log
    l = log --graph --date=short
    changes = log --pretty=format:\"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]\" --decorate --numstat
    short = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    file = log -u

    # pull
    pl = pull

    # push
    ps = push
    pom = push origin master

    # rebase
    rc = rebase --continue
    rs = rebase --skip

    # remote
    r = remote -v

    # remove
    rmc = rm --cached

    # reset
    unstage = reset HEAD
    ucommit = reset --soft HEAD^

    # status
    s = status -sb

    # tag
    t = tag -l

    # alias
    alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[branch]
    autosetupmerge = true
[push]
    default=tracking
[github]
    user = joelsantiago
[credential]
	helper = osxkeychain
[commit]
    template = ~/.gitmessage
